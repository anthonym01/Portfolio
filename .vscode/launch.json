    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox",
            "url": "http://localhost:5501",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:5501",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Microsoft Edge",
            "request": "launch",
            "type": "vscode-edge-devtools.debug",
            "url": "http://localhost:5501"
        }
    ]
}